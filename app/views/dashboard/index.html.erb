<div class="p-8 bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-5xl font-bold mb-12 text-gray-900 text-center">FDA Pharma Tracker</h1>
    
    <% if @batches.any? %>
      <% @batches.each do |batch| %>
        <% days_left = (Date.parse(batch.expiry.to_s) - Date.today).to_i %>
        <% temp_alert = (batch.shipment&.current_temp || 0) > 5 %>
        
        <div class="bg-white p-8 mb-8 shadow-xl rounded-2xl border-l-8 <%= days_left <= 7 ? 'border-red-500 bg-red-50/50' : 'border-blue-500' %>">
          <div class="grid grid-cols-1 lg:grid-cols-4 items-center gap-6">
            <div class="font-mono">
              <div class="text-3xl font-black text-gray-900"><%= batch.lot_number %></div>
              <div class="text-sm text-gray-500">Batch #<%= batch.id %></div>
            </div>
            
            <div class="text-center">
              <div class="text-4xl font-bold <%= days_left <= 7 ? 'text-red-600' : 'text-green-600' %>">
                <%= days_left %> days
              </div>
              <div class="text-sm text-gray-500"><%= batch.expiry.to_date.strftime('%b %d, %Y') %></div>
            </div>
            
            <div class="text-center">
              <div class="text-3xl <%= temp_alert ? 'text-orange-600' : 'text-green-600' %> font-bold">
                <%= batch.shipment&.current_temp || 0 %>Â°C
              </div>
              <div class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">
                <%= batch.shipment&.tracking_number %>
              </div>
            </div>
            
            <div class="text-right">
              <span class="px-6 py-3 rounded-full text-lg font-bold bg-<%= batch.status == 'active' ? 'green' : 'gray' %>-100 text-<%= batch.status == 'active' ? 'green' : 'gray' %>-800 shadow-lg">
                <%= batch.status.upcase %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-32">
        <div class="text-6xl mb-4">ðŸšš</div>
        <h2 class="text-3xl font-bold text-gray-500 mb-4">No Active Shipments</h2>
        <p class="text-xl text-gray-400">Seed data loads on deploy</p>
      </div>
    <% end %>
  </div>
</div>
